<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Southgate LC</h2>
                <p>Admin Panel</p>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="/admin/dashboard" class="nav-link">
                            <span class="nav-icon">üìä</span>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/cover" class="nav-link">
                            <span class="nav-icon">üìã</span>
                            <span class="nav-text">Your Cover</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/get-cover" class="nav-link">
                            <span class="nav-icon">‚ûï</span>
                            <span class="nav-text">Get Cover</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/instructors" class="nav-link active">
                            <span class="nav-icon">üë•</span>
                            <span class="nav-text">Instructors</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/timetable" class="nav-link">
                            <span class="nav-icon">üìÖ</span>
                            <span class="nav-text">Timetable</span>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <%= user.profile.firstName.charAt(0) %><%= user.profile.lastName.charAt(0) %>
                    </div>
                    <div class="user-details">
                        <div class="user-name"><%= user.profile.firstName %> <%= user.profile.lastName %></div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
                <a href="/auth/logout" class="logout-btn">Sign Out</a>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Top Header -->
            <header class="content-header">
                <div class="header-left">
                    <h1 class="page-title">Instructor Management</h1>
                    <p class="page-subtitle">Approve new instructors and manage existing accounts</p>
                </div>
            </header>

            <!-- Flash Messages -->
            <div class="flash-messages">
                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-error">
                        <span class="alert-icon">‚ö†Ô∏è</span>
                        <span class="alert-text"><%= error_msg %></span>
                        <button class="alert-close" onclick="this.parentElement.style.display='none'">√ó</button>
                    </div>
                <% } %>

                <% if (success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success">
                        <span class="alert-icon">‚úÖ</span>
                        <span class="alert-text"><%= success_msg %></span>
                        <button class="alert-close" onclick="this.parentElement.style.display='none'">√ó</button>
                    </div>
                <% } %>
            </div>

            <!-- Page Content -->
            <div class="page-content">
                <!-- Pending Instructors -->
                <div class="card">
                    <div class="card-header">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <h3 class="card-title">‚è≥ Pending Approvals (<%= pendingInstructors.length %>)</h3>
                                <p class="card-subtitle">New instructor registrations awaiting your approval</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (pendingInstructors.length === 0) { %>
                            <div class="empty-state">
                                <div class="empty-state-icon">‚ú®</div>
                                <div class="empty-state-text">No pending instructor approvals</div>
                            </div>
                        <% } else { %>
                            <div class="instructor-list">
                                <% pendingInstructors.forEach(function(instructor) { %>
                                    <div class="instructor-item">
                                        <div class="instructor-avatar">
                                            <%= instructor.profile.firstName.charAt(0) %><%= instructor.profile.lastName.charAt(0) %>
                                        </div>
                                        <div class="instructor-info">
                                            <div class="instructor-name">
                                                <%= instructor.profile.firstName %> <%= instructor.profile.lastName %>
                                                <span class="status-badge status-pending">Pending</span>
                                            </div>
                                            <div class="instructor-email"><%= instructor.email %></div>
                                            <div class="instructor-details">
                                                Registered: <%= new Date(instructor.createdAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                                <% if (instructor.profile.phone) { %>
                                                    ‚Ä¢ Phone: <%= instructor.profile.phone %>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="instructor-actions">
                                            <form action="/admin/instructors/<%= instructor._id %>/approve" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-success">‚úì Approve</button>
                                            </form>
                                            <form action="/admin/instructors/<%= instructor._id %>/reject" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to reject this instructor?')">‚úï Reject</button>
                                            </form>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Approved Instructors -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">‚úÖ Approved Instructors (<%= approvedInstructors.length %>)</h3>
                        <p class="card-subtitle">Active instructors who can access the system</p>
                    </div>
                    <div class="card-body">
                        <% if (approvedInstructors.length === 0) { %>
                            <div class="empty-state">
                                <div class="empty-state-icon">üë•</div>
                                <div class="empty-state-text">No approved instructors yet</div>
                            </div>
                        <% } else { %>
                            <div class="instructor-list">
                                <% approvedInstructors.forEach(function(instructor) { %>
                                    <div class="instructor-item">
                                        <div class="instructor-avatar approved">
                                            <%= instructor.profile.firstName.charAt(0) %><%= instructor.profile.lastName.charAt(0) %>
                                        </div>
                                        <div class="instructor-info">
                                            <div class="instructor-name">
                                                <%= instructor.profile.firstName %> <%= instructor.profile.lastName %>
                                                <span class="status-badge status-approved">Approved</span>
                                            </div>
                                            <div class="instructor-email"><%= instructor.email %></div>
                                            <div class="instructor-details">
                                                Approved: <%= new Date(instructor.approvedAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                                <% if (instructor.profile.phone) { %>
                                                    ‚Ä¢ Phone: <%= instructor.profile.phone %>
                                                <% } %>
                                                <% if (instructor.instructorData && instructor.instructorData.qualifications && instructor.instructorData.qualifications.length > 0) { %>
                                                    <br>Qualifications: <%= instructor.instructorData.qualifications.join(', ') %>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="instructor-actions">
                                            <form action="/admin/instructors/<%= instructor._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this instructor account? This action cannot be undone.')">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Rejected Instructors -->
                <% if (rejectedInstructors.length > 0) { %>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">‚ùå Rejected Instructors (<%= rejectedInstructors.length %>)</h3>
                            <p class="card-subtitle">Instructor applications that were rejected</p>
                        </div>
                        <div class="card-body">
                            <div class="instructor-list">
                                <% rejectedInstructors.forEach(function(instructor) { %>
                                    <div class="instructor-item rejected">
                                        <div class="instructor-avatar rejected">
                                            <%= instructor.profile.firstName.charAt(0) %><%= instructor.profile.lastName.charAt(0) %>
                                        </div>
                                        <div class="instructor-info">
                                            <div class="instructor-name">
                                                <%= instructor.profile.firstName %> <%= instructor.profile.lastName %>
                                                <span class="status-badge status-rejected">Rejected</span>
                                            </div>
                                            <div class="instructor-email"><%= instructor.email %></div>
                                            <div class="instructor-details">
                                                Registered: <%= new Date(instructor.createdAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                            </div>
                                        </div>
                                        <div class="instructor-actions">
                                            <form action="/admin/instructors/<%= instructor._id %>/approve" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                            </form>
                                            <form action="/admin/instructors/<%= instructor._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this instructor account?')">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <script src="/js/admin.js"></script>

    <style>
    /* Instructor-specific styles */
    .instructor-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .instructor-item {
        display: flex;
        align-items: center;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #28a745;
        transition: all 0.2s ease;
    }

    .instructor-item:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transform: translateY(-1px);
    }

    .instructor-item.rejected {
        border-left-color: #dc3545;
        opacity: 0.8;
    }

    .instructor-avatar {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #28a745, #20c997);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 20px;
        color: white;
        margin-right: 20px;
        flex-shrink: 0;
    }

    .instructor-avatar.approved {
        background: linear-gradient(135deg, #28a745, #20c997);
    }

    .instructor-avatar.rejected {
        background: linear-gradient(135deg, #6c757d, #adb5bd);
    }

    .instructor-info {
        flex: 1;
    }

    .instructor-name {
        font-weight: 600;
        font-size: 16px;
        color: #1a202c;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .instructor-email {
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 6px;
    }

    .instructor-details {
        font-size: 13px;
        color: #6c757d;
        line-height: 1.6;
    }

    .instructor-actions {
        display: flex;
        gap: 8px;
        flex-shrink: 0;
        margin-left: 20px;
    }

    .status-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-badge.status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-badge.status-approved {
        background-color: #d4f6d9;
        color: #0f5132;
    }

    .status-badge.status-rejected {
        background-color: #f8d7da;
        color: #721c24;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .instructor-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .instructor-avatar {
            margin-bottom: 12px;
        }

        .instructor-actions {
            width: 100%;
            margin-left: 0;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid #e2e8f0;
        }

        .instructor-actions form {
            flex: 1;
        }

        .instructor-actions button {
            width: 100%;
        }
    }
    </style>
</body>
</html>