<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/instructor.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Mobile Header -->
    <header class="mobile-header">
        <div class="header-content">
            <div class="header-title">
                <h1>Documents</h1>
                <p>Manage your qualifications</p>
            </div>
            <a href="/auth/logout" class="mobile-logout">Sign Out</a>
        </div>
    </header>

    <!-- Flash Messages -->
    <% if (error_msg && error_msg.length > 0) { %>
        <div class="flash-message error">
            <span>‚ö†Ô∏è <%= error_msg %></span>
            <button onclick="this.parentElement.style.display='none'">√ó</button>
        </div>
    <% } %>

    <% if (success_msg && success_msg.length > 0) { %>
        <div class="flash-message success">
            <span>‚úÖ <%= success_msg %></span>
            <button onclick="this.parentElement.style.display='none'">√ó</button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Upload Button -->
        <div class="upload-section">
            <button class="btn-upload" onclick="openUploadModal()">
                üì§ Upload New Document
            </button>
        </div>

        <!-- Document Status Summary -->
        <div class="doc-stats">
            <div class="doc-stat-item approved">
                <div class="doc-stat-number"><%= approvedCount %></div>
                <div class="doc-stat-label">Approved</div>
            </div>
            <div class="doc-stat-item pending">
                <div class="doc-stat-number"><%= pendingCount %></div>
                <div class="doc-stat-label">Pending</div>
            </div>
            <div class="doc-stat-item expired">
                <div class="doc-stat-number"><%= expiredCount %></div>
                <div class="doc-stat-label">Expired</div>
            </div>
        </div>

        <!-- Expired/Expiring Soon Warning -->
        <% if (expiringSoon.length > 0) { %>
            <div class="warning-box expiring">
                <div class="warning-icon">‚ö†Ô∏è</div>
                <div class="warning-content">
                    <strong>Documents Expiring Soon</strong>
                    <p><%= expiringSoon.length %> document(s) expire within 30 days. Please renew them.</p>
                </div>
            </div>
        <% } %>

        <% if (expired.length > 0) { %>
            <div class="warning-box expired">
                <div class="warning-icon">‚ùå</div>
                <div class="warning-content">
                    <strong>Expired Documents</strong>
                    <p><%= expired.length %> document(s) have expired. Upload renewed versions immediately.</p>
                </div>
            </div>
        <% } %>

        <!-- Documents List -->
        <% if (documents.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">üìÑ</div>
                <h3>No documents uploaded</h3>
                <p>Upload your qualifications and certificates to get started</p>
                <button class="btn-primary" onclick="openUploadModal()">Upload First Document</button>
            </div>
        <% } else { %>
            <!-- Expired Documents -->
            <% if (expired.length > 0) { %>
                <section class="docs-section">
                    <h2 class="section-title">‚ùå Expired Documents</h2>
                    <div class="documents-list">
                        <% expired.forEach(function(doc) { %>
                            <%- include('partials/document-card', { doc: doc }) %>
                        <% }); %>
                    </div>
                </section>
            <% } %>

            <!-- Expiring Soon -->
            <% if (expiringSoon.length > 0) { %>
                <section class="docs-section">
                    <h2 class="section-title">‚ö†Ô∏è Expiring Soon</h2>
                    <div class="documents-list">
                        <% expiringSoon.forEach(function(doc) { %>
                            <%- include('partials/document-card', { doc: doc }) %>
                        <% }); %>
                    </div>
                </section>
            <% } %>

            <!-- Pending Approval -->
            <% if (pending.length > 0) { %>
                <section class="docs-section">
                    <h2 class="section-title">‚è≥ Pending Approval</h2>
                    <div class="documents-list">
                        <% pending.forEach(function(doc) { %>
                            <%- include('partials/document-card', { doc: doc }) %>
                        <% }); %>
                    </div>
                </section>
            <% } %>

            <!-- Approved Documents -->
            <% if (approved.length > 0) { %>
                <section class="docs-section">
                    <h2 class="section-title">‚úÖ Approved Documents</h2>
                    <div class="documents-list">
                        <% approved.forEach(function(doc) { %>
                            <%- include('partials/document-card', { doc: doc }) %>
                        <% }); %>
                    </div>
                </section>
            <% } %>

            <!-- Rejected Documents -->
            <% if (rejected.length > 0) { %>
                <section class="docs-section">
                    <h2 class="section-title">‚ùå Rejected Documents</h2>
                    <div class="documents-list">
                        <% rejected.forEach(function(doc) { %>
                            <%- include('partials/document-card', { doc: doc }) %>
                        <% }); %>
                    </div>
                </section>
            <% } %>
        <% } %>
    </main>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <a href="/instructor/timetable" class="nav-item">
            <span class="nav-icon">üìÖ</span>
            <span class="nav-label">Timetable</span>
        </a>
        <a href="/instructor/open-cover" class="nav-item">
            <span class="nav-icon">üìã</span>
            <span class="nav-label">Open Cover</span>
        </a>
        <a href="/instructor/stats" class="nav-item">
            <span class="nav-icon">üìä</span>
            <span class="nav-label">Stats</span>
        </a>
        <a href="/instructor/documents" class="nav-item active">
            <span class="nav-icon">üìÑ</span>
            <span class="nav-label">Documents</span>
        </a>
    </nav>

    <!-- Upload Modal -->
    <div id="uploadModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Upload Document</h3>
                <button class="modal-close" onclick="closeUploadModal()">√ó</button>
            </div>
            <div class="modal-body">
                <form action="/instructor/documents/upload" method="POST" enctype="multipart/form-data" id="uploadForm">
                    <div class="form-group">
                        <label for="documentType">Document Type *</label>
                        <select id="documentType" name="documentType" required>
                            <option value="">Select type...</option>
                            <option value="qualification">Teaching Qualification</option>
                            <option value="insurance">Insurance Certificate</option>
                            <option value="dbs">DBS Check</option>
                            <option value="first_aid">First Aid Certificate</option>
                            <option value="other">Other Certification</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="documentFile">Upload File * (PDF, JPG, PNG - Max 5MB)</label>
                        <input type="file" id="documentFile" name="documentFile" accept=".pdf,.jpg,.jpeg,.png" required>
                    </div>

                    <div class="form-group">
                        <label for="expiryDate">Expiry Date (Optional)</label>
                        <input type="date" id="expiryDate" name="expiryDate">
                        <small>Leave blank if document doesn't expire</small>
                    </div>

                    <div class="form-group">
                        <label for="notes">Notes (Optional)</label>
                        <textarea id="notes" name="notes" rows="3" placeholder="Add any additional information..."></textarea>
                    </div>

                    <div class="modal-actions">
                        <button type="button" class="btn-secondary" onclick="closeUploadModal()">Cancel</button>
                        <button type="submit" class="btn-primary">Upload Document</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function openUploadModal() {
            document.getElementById('uploadModal').style.display = 'flex';
        }

        function closeUploadModal() {
            document.getElementById('uploadModal').style.display = 'none';
            document.getElementById('uploadForm').reset();
        }

        // Close modal on outside click
        window.onclick = function(event) {
            const modal = document.getElementById('uploadModal');
            if (event.target === modal) {
                closeUploadModal();
            }
        }

        // Auto-hide flash messages
        setTimeout(() => {
            document.querySelectorAll('.flash-message').forEach(msg => {
                msg.style.opacity = '0';
                setTimeout(() => msg.style.display = 'none', 300);
            });
        }, 5000);
    </script>
</body>
</html>